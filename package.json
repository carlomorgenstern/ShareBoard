{
  "name": "shareboard",
  "description": "ShareBoard - an open source interactive whiteboard & collaboration app",
  "version": "0.0.1",
  "private": true,
  "author": "ShareBoard Team",
  "license": "MIT",
  "contributors": [
    "Carlo Morgenstern <carlo@morgenstern.io> (https://morgenstern.io)"
  ],
  "scripts": {
    "start": "concurrently -n Backend,Frontend -c bgGreen,bgBlue npm:backend-start npm:frontend-start",
    "build": "npm run clean && concurrently -n Backend,Frontend -c bgGreen,bgBlue npm:backend-build npm:frontend-build",
    "test": "concurrently -n Backend,Frontend -c bgGreen,bgBlue npm:backend-test npm:frontend-test",
    "lint": "npm run -s backend-lint && npm run -s frontend-lint-ts && npm run -s frontend-lint-sass && npm run -s shared-lint",
    "clean": "rimraf dist",
    "e2e": "ng e2e",
    "backend-start": "onchange 'backend/**/*' -i -- cross-env TS_NODE_PROJECT=backend/tsconfig.json node --require ts-node/register --inspect=9229 backend/server.ts",
    "backend-build": "tsc --build backend/tsconfig.json",
    "backend-test": "cross-env TS_NODE_PROJECT=backend/tsconfig.json nyc mocha --require ts-node/register backend/**/*.spec.ts",
    "backend-lint": "echo Linting \"backend\"... && tslint -c backend/tslint.json -p backend/tsconfig.json -t stylish",
    "frontend-start": "ng serve --open=true",
    "frontend-build": "ng build -c=production",
    "frontend-test": "ng test",
    "frontend-lint-ts": "ng lint",
    "frontend-lint-sass": "echo Linting \"sass\"... && sass-lint -c frontend/.sass-lint.yml --verbose --no-exit",
    "shared-lint": "echo Linting \"shared\"... && tslint -c tslint.json -p shared/tsconfig.json -t stylish"
  },
  "dependencies": {
    "@angular/animations": "~6.0.9",
    "@angular/common": "~6.0.9",
    "@angular/compiler": "~6.0.9",
    "@angular/core": "~6.0.9",
    "@angular/forms": "~6.0.9",
    "@angular/http": "~6.0.9",
    "@angular/platform-browser": "~6.0.9",
    "@angular/platform-browser-dynamic": "~6.0.9",
    "@angular/router": "~6.0.9",
    "@fortawesome/angular-fontawesome": "^0.1.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.2",
    "@fortawesome/free-solid-svg-icons": "^5.2.0",
    "@ng-bootstrap/ng-bootstrap": "^2.2.2",
    "bcrypt": "^3.0.0",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.7",
    "dotenv": "^6.0.0",
    "escape-string-regexp": "^1.0.5",
    "js-sha512": "^0.8.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-csrf": "^3.0.6",
    "koa-helmet": "^4.0.0",
    "koa-passport": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.2",
    "koa-static": "^5.0.0",
    "mongodb": "^3.1.1",
    "ngx-webstorage": "^2.0.1",
    "passport-local": "^1.0.0",
    "roboto-fontface": "^0.9.0",
    "rxjs": "~6.2.2",
    "tslib": "^1.9.3",
    "uuid": "^3.3.2",
    "winston": "^3.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.2",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "~6.0.9",
    "@angular/language-service": "~6.0.9",
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/dotenv": "^4.0.3",
    "@types/escape-string-regexp": "^1.0.0",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/js-sha512": "^0.7.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-csrf": "^3.0.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-passport": "^4.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/koa-session": "^5.7.4",
    "@types/koa-static": "^4.0.0",
    "@types/mocha": "^5.2.5",
    "@types/mongodb": "^3.1.3",
    "@types/passport-local": "^1.0.33",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
